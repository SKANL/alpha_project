---
import Layout from "@/layouts/Layout.astro";
---

<Layout title="404 - Página no encontrada">
    <div class="min-h-screen flex items-center justify-center p-4">
        <div class="text-center max-w-md">
            <h1 class="text-8xl font-light text-brand mb-4">404</h1>
            <h2
                class="text-2xl font-light tracking-zen text-content-primary mb-4"
            >
                Página no encontrada
            </h2>
            <p class="text-sm text-content-secondary mb-8">
                La página que buscas no existe o ha sido movida.
            </p>
            <div class="flex gap-4 justify-center">
                <a
                    href="/dashboard"
                    class="px-6 py-3 bg-brand hover:bg-brand-hover text-white text-sm font-medium rounded-lg transition-all duration-200 hover:scale-105"
                >
                    IR AL DASHBOARD
                </a>
                <a
                    href="/"
                    class="px-6 py-3 bg-surface-card hover:bg-surface-highlight text-content-primary text-sm font-medium rounded-lg border border-border transition-all duration-200 hover:scale-105"
                >
                    INICIO
                </a>
            </div>
        </div>
    </div>
</Layout>
