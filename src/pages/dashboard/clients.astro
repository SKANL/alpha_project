---
import Layout from "../../layouts/Layout.astro";
import Navigation from "../../components/Navigation.astro";
import { supabase } from "../../lib/supabase";

const accessToken = Astro.cookies.get("sb-access-token");
const refreshToken = Astro.cookies.get("sb-refresh-token");

if (!accessToken || !refreshToken) {
  return Astro.redirect("/signin");
}

const session = await supabase.auth.setSession({
  refresh_token: refreshToken.value,
  access_token: accessToken.value,
});

if (session.error || !session.data.user) {
  return Astro.redirect("/signin");
}

const user = session.data.user;

const { data: clients } = await supabase
  .from("clients")
  .select("*")
  .eq("user_id", user.id)
  .order("created_at", { ascending: false });
---

<Layout title="Clientes">
  <div class="dashboard-container">
    <Navigation currentPage="clients" />
    
    <main class="dashboard-main">
      <header class="page-header">
        <h1 class="page-title">Clientes</h1>
        <p class="page-subtitle">Gestión de expedientes y salas de bienvenida</p>
      </header>

      <div class="action-bar">
        <a href="/dashboard/clients/new" class="primary-action">
          Nueva Sala de Bienvenida
        </a>
      </div>

      {clients && clients.length > 0 ? (
        <table class="data-table">
          <thead>
            <tr>
              <th>Cliente</th>
              <th>Caso</th>
              <th>Estado</th>
              <th>Fecha</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            {clients.map((client) => (
              <tr>
                <td class="table-primary">{client.client_name}</td>
                <td>{client.case_name}</td>
                <td>
                  <span class={`status-badge ${client.status}`}>
                    {client.status === 'pending' ? 'Pendiente' : 'Completado'}
                  </span>
                </td>
                <td class="table-date">{new Date(client.created_at).toLocaleDateString('es-MX')}</td>
                <td>
                  <div class="table-actions">
                    {client.status === 'pending' ? (
                      <button
                        class="action-link copy-link-btn"
                        data-token={client.magic_link_token}
                      >
                        Copiar Link
                      </button>
                    ) : (
                      <a
                        href={`/dashboard/clients/expediente?id=${client.id}`}
                        class="action-link"
                      >
                        Ver Expediente
                      </a>
                    )}
                    <button
                      class="action-link delete delete-client-btn"
                      data-id={client.id}
                      data-name={client.client_name}
                    >
                      Eliminar
                    </button>
                  </div>
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      ) : (
        <div class="empty-state">
          <h3 class="empty-title">No hay clientes aún</h3>
          <p class="empty-text">Crea tu primera sala de bienvenida para comenzar</p>
          <a href="/dashboard/clients/new" class="empty-action">
            Nueva Sala de Bienvenida
          </a>
        </div>
      )}

      <div id="notification" class="notification"></div>
    </main>
  </div>
</Layout>

<style>
  .dashboard-container {
    display: flex;
    min-height: 100vh;
    background: #0a0a0a;
  }

  .dashboard-main {
    flex: 1;
    margin-left: 240px;
    padding: 4rem 6rem;
  }

  .page-header {
    margin-bottom: 3rem;
  }

  .page-title {
    font-size: 2rem;
    font-weight: 300;
    letter-spacing: 0.02em;
    color: rgba(255, 255, 255, 0.95);
    margin-bottom: 0.5rem;
  }

  .page-subtitle {
    font-size: 0.875rem;
    font-weight: 300;
    letter-spacing: 0.05em;
    color: rgba(255, 255, 255, 0.4);
  }

  .action-bar {
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.04);
  }

  .primary-action {
    display: inline-block;
    padding: 1rem 2rem;
    background: transparent;
    border: 1px solid rgba(255, 255, 255, 0.15);
    color: rgba(255, 255, 255, 0.9);
    font-size: 0.75rem;
    font-weight: 300;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border-radius: 2px;
  }

  .primary-action:hover {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(255, 255, 255, 0.3);
  }

  .data-table {
    width: 100%;
    border-collapse: collapse;
  }

  .data-table thead {
    border-bottom: 1px solid rgba(255, 255, 255, 0.06);
  }

  .data-table th {
    padding: 1.5rem 0;
    text-align: left;
    font-size: 0.75rem;
    font-weight: 300;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.4);
  }

  .data-table tbody tr {
    border-bottom: 1px solid rgba(255, 255, 255, 0.03);
    transition: background 0.2s ease;
  }

  .data-table tbody tr:hover {
    background: rgba(255, 255, 255, 0.01);
  }

  .data-table td {
    padding: 2rem 0;
    font-size: 0.875rem;
    font-weight: 300;
    color: rgba(255, 255, 255, 0.6);
  }

  .table-primary {
    color: rgba(255, 255, 255, 0.9);
  }

  .table-date {
    color: rgba(255, 255, 255, 0.4);
    font-size: 0.8125rem;
  }

  .status-badge {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    font-size: 0.6875rem;
    font-weight: 300;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    border-radius: 2px;
  }

  .status-badge.pending {
    background: rgba(255, 255, 255, 0.05);
    color: rgba(255, 255, 255, 0.5);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .status-badge.completed {
    background: rgba(255, 255, 255, 0.08);
    color: rgba(255, 255, 255, 0.7);
    border: 1px solid rgba(255, 255, 255, 0.15);
  }

  .table-actions {
    display: flex;
    gap: 1.5rem;
    align-items: center;
  }

  .action-link {
    font-size: 0.8125rem;
    font-weight: 300;
    color: rgba(255, 255, 255, 0.5);
    text-decoration: none;
    background: transparent;
    border: none;
    cursor: pointer;
    transition: color 0.3s ease;
    padding: 0;
  }

  .action-link:hover {
    color: rgba(255, 255, 255, 0.9);
  }

  .action-link.delete:hover {
    color: rgba(239, 68, 68, 0.8);
  }

  .empty-state {
    padding: 6rem 2rem;
    text-align: center;
  }

  .empty-title {
    font-size: 1.5rem;
    font-weight: 300;
    color: rgba(255, 255, 255, 0.6);
    margin-bottom: 1rem;
  }

  .empty-text {
    font-size: 0.875rem;
    font-weight: 300;
    color: rgba(255, 255, 255, 0.3);
    margin-bottom: 3rem;
  }

  .empty-action {
    display: inline-block;
    padding: 1rem 2rem;
    background: transparent;
    border: 1px solid rgba(255, 255, 255, 0.15);
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.75rem;
    font-weight: 300;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    text-decoration: none;
    transition: all 0.3s ease;
    border-radius: 2px;
  }

  .empty-action:hover {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(255, 255, 255, 0.3);
  }

  .notification {
    position: fixed;
    top: 2rem;
    right: 2rem;
    padding: 1rem 2rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: rgba(255, 255, 255, 0.9);
    font-size: 0.875rem;
    font-weight: 300;
    border-radius: 2px;
    display: none;
    animation: slideInRight 0.3s ease-out;
  }

  .notification.show {
    display: block;
  }

  @keyframes slideInRight {
    from {
      transform: translateX(100%);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }
</style>

<script>
  const notification = document.getElementById('notification');

  function showNotification(message: string) {
    if (!notification) return;
    notification.textContent = message;
    notification.className = 'notification show';
    setTimeout(() => {
      notification.classList.remove('show');
    }, 3000);
  }

  // Copy link functionality
  document.querySelectorAll('.copy-link-btn').forEach((btn) => {
    btn.addEventListener('click', () => {
      const token = (btn as HTMLElement).dataset.token;
      const link = `${window.location.origin}/welcome/${token}`;
      navigator.clipboard.writeText(link);
      showNotification('Link copiado al portapapeles');
    });
  });

  // Delete client functionality
  document.querySelectorAll('.delete-client-btn').forEach((btn) => {
    btn.addEventListener('click', async () => {
      const id = (btn as HTMLElement).dataset.id;
      const name = (btn as HTMLElement).dataset.name;

      if (!confirm(`¿Estás seguro de eliminar el expediente de ${name}? Esta acción no se puede deshacer.`)) {
        return;
      }

      try {
        const response = await fetch('/api/clients/delete', {
          method: 'DELETE',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ id }),
        });

        if (response.ok) {
          showNotification('Cliente eliminado correctamente');
          setTimeout(() => window.location.reload(), 1500);
        } else {
          showNotification('Error al eliminar cliente');
        }
      } catch (error) {
        showNotification('Error al eliminar cliente');
      }
    });
  });
</script>
