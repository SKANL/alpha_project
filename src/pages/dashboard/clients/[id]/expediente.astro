---
import Layout from "@/layouts/Dashboard.astro";
import Navigation from "@/components/Navigation.astro";
import { createSupabaseServerClient } from "@/lib/supabase-server";
import Button from "@/components/ui/Button.astro";
import PageHeader from "@/components/ui/PageHeader.astro";
import Tabs from "@/components/ui/Tabs.astro";
import TabTrigger from "@/components/ui/TabTrigger.astro";
import TabContent from "@/components/ui/TabContent.astro";
import Card from "@/components/ui/Card.astro";
import type { ClientDocument, ClientAnswer, Question } from "@/lib/types";
import { Image } from "astro:assets";

// Create request-scoped Supabase client
const { supabase, user } = await createSupabaseServerClient({
  cookies: Astro.cookies,
});

if (!user) {
  return Astro.redirect("/auth/signin");
}

const { id } = Astro.params;
const clientId = id;
if (!clientId) {
  return Astro.redirect("/dashboard/clients");
}

// Get expediente data directly from service (no loopback request)
import { ClientService } from "@/services/ClientService";
const expedienteData = await ClientService.getClientExpediente(
  supabase,
  clientId,
  user.id,
);

if (!expedienteData || !expedienteData.client) {
  return Astro.redirect("/dashboard/clients");
}

const client = expedienteData.client;
const documents = expedienteData.documents;
const answers = expedienteData.answers;
---

<Layout title={`Expediente: ${client.client_name}`}>
  <Navigation currentPage="clients" />

  <main class="flex-1 ml-60 p-16 max-w-7xl">
    <div class="mb-8">
      <Button
        href="/dashboard/clients"
        variant="ghost"
        class="pl-0 hover:pl-2 transition-all"
        data-astro-prefetch
      >
        ← Volver a Clientes
      </Button>
    </div>

    <PageHeader
      title={`Expediente: ${client.client_name}`}
      subtitle={client.case_name}
    />

    <Tabs defaultValue="contract" class="mt-12">
      <Fragment slot="list">
        <TabTrigger value="contract">Contrato Firmado</TabTrigger>
        <TabTrigger value="documents">Documentos</TabTrigger>
        <TabTrigger value="hechos">Hechos</TabTrigger>
      </Fragment>

      <Fragment slot="content">
        <TabContent value="contract">
          <Card>
            <div class="p-8">
              <h2 class="text-xl font-light text-content-primary mb-8">
                Contrato Firmado
              </h2>

              {
                client.signature_data ? (
                  <div class="space-y-12">
                    <div>
                      <h3 class="text-xs font-light tracking-widest uppercase text-content-secondary mb-4">
                        Firma Digital
                      </h3>
                      <div class="bg-white p-8 rounded border border-border inline-block">
                        <Image
                          src={client.signature_data}
                          alt="Firma"
                          width={300}
                          height={150}
                          class="max-w-[300px]"
                        />
                      </div>
                    </div>

                    <div class="bg-surface-highlight/10 border border-border rounded p-8">
                      <h3 class="text-xs font-light tracking-widest uppercase text-content-secondary mb-6">
                        Sello de Evidencia
                      </h3>
                      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                        <div>
                          <span class="block text-xs font-light tracking-widest uppercase text-content-muted mb-1">
                            Timestamp
                          </span>
                          <span class="text-sm font-light text-content-primary">
                            {new Date(
                              client.signature_timestamp!,
                            ).toLocaleString("es-MX")}
                          </span>
                        </div>
                        <div>
                          <span class="block text-xs font-light tracking-widest uppercase text-content-muted mb-1">
                            IP Address
                          </span>
                          <span class="text-sm font-light text-content-primary">
                            {client.signature_ip}
                          </span>
                        </div>
                        <div class="md:col-span-3">
                          <span class="block text-xs font-light tracking-widest uppercase text-content-muted mb-1">
                            Hash (SHA-256)
                          </span>
                          <code class="text-xs font-mono text-content-secondary break-all">
                            {client.signature_hash}
                          </code>
                        </div>
                      </div>
                    </div>
                  </div>
                ) : (
                  <div class="text-center py-12">
                    <p class="text-content-secondary font-light">
                      El contrato aún no ha sido firmado.
                    </p>
                  </div>
                )
              }
            </div>
          </Card>
        </TabContent>

        <TabContent value="documents">
          <Card>
            <div class="p-8">
              <h2 class="text-xl font-light text-content-primary mb-8">
                Documentos Subidos
              </h2>

              {
                documents && documents.length > 0 ? (
                  <div class="grid gap-px bg-border-weak border border-border-weak rounded overflow-hidden">
                    {documents.map((doc: ClientDocument) => (
                      <div class="bg-surface-card p-6 flex items-center justify-between hover:bg-surface-highlight/20 transition-colors">
                        <div>
                          <h3 class="text-sm font-medium text-content-primary mb-1">
                            {doc.document_type.replace("_", " ").toUpperCase()}
                          </h3>
                          <p class="text-xs font-light text-content-muted">
                            {new Date(doc.uploaded_at).toLocaleDateString(
                              "es-MX",
                            )}
                          </p>
                        </div>
                        <Button
                          href={doc.file_url}
                          target="_blank"
                          variant="ghost"
                          size="sm"
                        >
                          DESCARGAR
                        </Button>
                      </div>
                    ))}
                  </div>
                ) : (
                  <div class="text-center py-12">
                    <p class="text-content-secondary font-light">
                      No hay documentos subidos aún.
                    </p>
                  </div>
                )
              }
            </div>
          </Card>
        </TabContent>

        <TabContent value="hechos">
          <Card>
            <div class="p-8">
              <h2 class="text-xl font-light text-content-primary mb-8">
                Respuestas del Cuestionario
              </h2>

              {
                answers && answers.length > 0 ? (
                  <div class="space-y-8">
                    {answers.map(
                      (answer: ClientAnswer & { questions: Question }) => (
                        <div class="border-b border-border-weak pb-8 last:border-0 last:pb-0">
                          <h3 class="text-xs font-light tracking-widest uppercase text-content-secondary mb-3">
                            {answer.questions.question_text}
                          </h3>
                          <p class="text-sm font-light text-content-primary leading-relaxed">
                            {answer.answer_text}
                          </p>
                        </div>
                      ),
                    )}
                  </div>
                ) : (
                  <div class="text-center py-12">
                    <p class="text-content-secondary font-light">
                      No hay respuestas aún.
                    </p>
                  </div>
                )
              }
            </div>
          </Card>
        </TabContent>
      </Fragment>
    </Tabs>
  </main>
</Layout>
