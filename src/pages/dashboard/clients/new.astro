---
import Layout from "../../../layouts/Layout.astro";
import Navigation from "../../../components/Navigation.astro";
import { supabase } from "../../../lib/supabase";

const accessToken = Astro.cookies.get("sb-access-token");
const refreshToken = Astro.cookies.get("sb-refresh-token");

if (!accessToken || !refreshToken) {
  return Astro.redirect("/signin");
}

const session = await supabase.auth.setSession({
  refresh_token: refreshToken.value,
  access_token: accessToken.value,
});

if (session.error || !session.data.user) {
  return Astro.redirect("/signin");
}

const user = session.data.user;

const { data: contracts } = await supabase
  .from("contract_templates")
  .select("*")
  .eq("user_id", user.id);

const { data: questionnaires } = await supabase
  .from("questionnaire_templates")
  .select("*")
  .eq("user_id", user.id);

const hasTemplates = contracts && contracts.length > 0 && questionnaires && questionnaires.length > 0;
---

<Layout title="Nueva Sala de Bienvenida">
  <div class="dashboard-container">
    <Navigation currentPage="clients" />
    
    <main class="dashboard-main">
      <div class="page-header">
        <h1 class="page-title">Nueva Sala de Bienvenida</h1>
        <p class="page-subtitle">Crea el link mágico para tu cliente</p>
      </div>

      {!hasTemplates && (
        <div class="warning-banner">
          <p class="warning-text">
            Necesitas al menos una plantilla de contrato y una de cuestionario para crear una sala de bienvenida.
          </p>
          <div class="warning-actions">
            <a href="/dashboard/templates/contracts" class="action-link">
              Crear Contrato
            </a>
            <a href="/dashboard/templates/questionnaires" class="action-link">
              Crear Cuestionario
            </a>
          </div>
        </div>
      )}

      <div class="form-container">
        <form id="clientForm" class="client-form">
          <div class="form-row">
            <label for="client_name" class="form-label">Nombre del Cliente</label>
            <input
              type="text"
              id="client_name"
              name="client_name"
              class="form-input"
              placeholder="Juan Pérez"
              required
            />
          </div>

          <div class="form-row">
            <label for="case_name" class="form-label">Nombre del Caso (Interno)</label>
            <input
              type="text"
              id="case_name"
              name="case_name"
              class="form-input"
              placeholder="Divorcio Pérez"
              required
            />
          </div>

          <div class="form-row">
            <label for="contract_template_id" class="form-label">Plantilla de Contrato</label>
            <select id="contract_template_id" name="contract_template_id" class="form-select" required>
              <option value="">Selecciona un contrato</option>
              {contracts?.map((contract) => (
                <option value={contract.id}>{contract.name}</option>
              ))}
            </select>
          </div>

          <div class="form-row">
            <label for="questionnaire_template_id" class="form-label">Plantilla de Cuestionario</label>
            <select id="questionnaire_template_id" name="questionnaire_template_id" class="form-select" required>
              <option value="">Selecciona un cuestionario</option>
              {questionnaires?.map((q) => (
                <option value={q.id}>{q.name}</option>
              ))}
            </select>
          </div>

          <div class="form-row">
            <label class="form-label">Documentos a Solicitar</label>
            <div class="checkbox-group">
              <div class="checkbox-item">
                <input type="checkbox" id="doc_ine" name="documents" value="ine" />
                <label for="doc_ine">INE / Identificación Oficial</label>
              </div>
              <div class="checkbox-item">
                <input type="checkbox" id="doc_rfc" name="documents" value="rfc" />
                <label for="doc_rfc">RFC</label>
              </div>
              <div class="checkbox-item">
                <input type="checkbox" id="doc_acta" name="documents" value="acta_matrimonio" />
                <label for="doc_acta">Acta de Matrimonio</label>
              </div>
              <div class="checkbox-item">
                <input type="checkbox" id="doc_comprobante" name="documents" value="comprobante_domicilio" />
                <label for="doc_comprobante">Comprobante de Domicilio</label>
              </div>
            </div>
          </div>

          <button type="submit" class="primary-action" disabled={!hasTemplates}>
            Generar Link Mágico
          </button>
        </form>
      </div>

      <div id="linkModal" class="modal">
        <div class="modal-content">
          <h2 class="modal-title">Sala de Bienvenida Creada</h2>
          <p class="modal-description">
            Comparte este link con tu cliente. El link es de un solo uso.
          </p>
          <div class="link-display">
            <code id="magicLink" class="magic-link-code"></code>
          </div>
          <div class="modal-footer">
            <button id="copyLinkBtn" class="modal-btn primary">
              Copiar Link
            </button>
            <a href="/dashboard/clients" class="modal-btn secondary">
              Ver Clientes
            </a>
          </div>
        </div>
      </div>
    </main>
  </div>
</Layout>

<style>
  .dashboard-container {
    display: flex;
    min-height: 100vh;
    background: #0a0a0a;
  }

  .dashboard-main {
    flex: 1;
    margin-left: 240px;
    padding: 4rem 6rem;
  }

  .page-header {
    margin-bottom: 3rem;
  }

  .page-title {
    font-size: 2rem;
    font-weight: 300;
    letter-spacing: 0.02em;
    color: rgba(255, 255, 255, 0.95);
    margin-bottom: 0.5rem;
  }

  .page-subtitle {
    font-size: 0.875rem;
    font-weight: 300;
    letter-spacing: 0.05em;
    color: rgba(255, 255, 255, 0.4);
  }

  .warning-banner {
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 193, 7, 0.2);
    border-radius: 2px;
    padding: 2rem;
    margin-bottom: 3rem;
  }

  .warning-text {
    font-size: 0.875rem;
    font-weight: 300;
    color: rgba(255, 193, 7, 0.9);
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }

  .warning-actions {
    display: flex;
    gap: 2rem;
  }

  .form-container {
    max-width: 600px;
  }

  .client-form {
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
  }

  .form-row {
    display: flex;
    flex-direction: column;
  }

  .form-label {
    font-size: 0.75rem;
    font-weight: 300;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.5);
    margin-bottom: 1rem;
  }

  .form-input,
  .form-select {
    width: 100%;
    padding: 1rem 0;
    background: transparent;
    border: none;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    color: rgba(255, 255, 255, 0.9);
    font-size: 1rem;
    font-weight: 300;
    transition: border-color 0.3s ease;
  }

  .form-input:focus,
  .form-select:focus {
    outline: none;
    border-bottom-color: rgba(255, 255, 255, 0.3);
  }

  .form-input::placeholder {
    color: rgba(255, 255, 255, 0.25);
  }

  .form-select {
    cursor: pointer;
  }

  .form-select option {
    background: #0a0a0a;
    color: rgba(255, 255, 255, 0.9);
    padding: 1rem;
  }

  .checkbox-group {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .checkbox-item {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .checkbox-item input[type="checkbox"] {
    width: 18px;
    height: 18px;
    cursor: pointer;
    accent-color: rgba(255, 255, 255, 0.3);
  }

  .checkbox-item label {
    margin: 0;
    cursor: pointer;
    font-size: 0.875rem;
    font-weight: 300;
    color: rgba(255, 255, 255, 0.6);
    transition: color 0.2s ease;
  }

  .checkbox-item:hover label {
    color: rgba(255, 255, 255, 0.9);
  }

  .primary-action {
    padding: 1rem 2rem;
    background: transparent;
    border: 1px solid rgba(255, 255, 255, 0.15);
    color: rgba(255, 255, 255, 0.9);
    font-size: 0.75rem;
    font-weight: 300;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border-radius: 2px;
    margin-top: 1rem;
  }

  .primary-action:hover:not(:disabled) {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(255, 255, 255, 0.3);
  }

  .primary-action:disabled {
    border-color: rgba(255, 255, 255, 0.05);
    color: rgba(255, 255, 255, 0.2);
    cursor: not-allowed;
  }

  .action-link {
    font-size: 0.8125rem;
    font-weight: 300;
    color: rgba(255, 193, 7, 0.8);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .action-link:hover {
    color: rgba(255, 193, 7, 1);
  }

  .modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.85);
    z-index: 1000;
    align-items: center;
    justify-content: center;
  }

  .modal.active {
    display: flex;
  }

  .modal-content {
    background: #0a0a0a;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 2px;
    padding: 3rem;
    max-width: 600px;
    width: 90%;
  }

  .modal-title {
    font-size: 1.25rem;
    font-weight: 300;
    letter-spacing: 0.02em;
    color: rgba(255, 255, 255, 0.95);
    margin-bottom: 1.5rem;
  }

  .modal-description {
    font-size: 0.875rem;
    font-weight: 300;
    color: rgba(255, 255, 255, 0.4);
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .link-display {
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.06);
    border-radius: 2px;
    padding: 1.5rem;
    margin-bottom: 2rem;
    word-break: break-all;
  }

  .magic-link-code {
    font-family: 'Courier New', monospace;
    font-size: 0.8125rem;
    font-weight: 300;
    color: rgba(255, 255, 255, 0.8);
    letter-spacing: 0.02em;
  }

  .modal-footer {
    display: flex;
    gap: 1rem;
    justify-content: flex-end;
  }

  .modal-btn {
    padding: 0.75rem 2rem;
    font-size: 0.75rem;
    font-weight: 300;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    cursor: pointer;
    transition: all 0.3s ease;
    border-radius: 2px;
    text-decoration: none;
    display: inline-block;
  }

  .modal-btn.primary {
    background: transparent;
    border: 1px solid rgba(255, 255, 255, 0.2);
    color: rgba(255, 255, 255, 0.9);
  }

  .modal-btn.primary:hover {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(255, 255, 255, 0.4);
  }

  .modal-btn.secondary {
    background: transparent;
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: rgba(255, 255, 255, 0.5);
  }

  .modal-btn.secondary:hover {
    border-color: rgba(255, 255, 255, 0.2);
    color: rgba(255, 255, 255, 0.7);
  }
</style>

<script>
  const form = document.getElementById('clientForm') as HTMLFormElement;
  const modal = document.getElementById('linkModal');
  const magicLinkEl = document.getElementById('magicLink');
  const copyBtn = document.getElementById('copyLinkBtn');

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const formData = new FormData(form);
    const documents = formData.getAll('documents');

    const data = {
      client_name: formData.get('client_name'),
      case_name: formData.get('case_name'),
      contract_template_id: formData.get('contract_template_id'),
      questionnaire_template_id: formData.get('questionnaire_template_id'),
      required_documents: documents,
    };

    try {
      const response = await fetch('/api/clients/create', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data),
      });

      if (response.ok) {
        const result = await response.json();
        if (magicLinkEl) {
          magicLinkEl.textContent = result.magic_link;
        }
        modal?.classList.add('active');
      } else {
        const error = await response.json();
        alert('Error: ' + error.error);
      }
    } catch (error) {
      alert('Error al crear la sala de bienvenida');
    }
  });

  copyBtn?.addEventListener('click', () => {
    const link = magicLinkEl?.textContent || '';
    navigator.clipboard.writeText(link);
    copyBtn.textContent = 'Copiado';
    setTimeout(() => {
      copyBtn.textContent = 'Copiar Link';
    }, 2000);
  });

  // Close modal on background click
  modal?.addEventListener('click', (e) => {
    if (e.target === modal) {
      modal.classList.remove('active');
    }
  });
</script>
