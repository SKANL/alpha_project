---
import Layout from "@/layouts/Dashboard.astro";
import Navigation from "@/components/Navigation.astro";
import PageHeader from "@/components/ui/PageHeader.astro";
import Input from "@/components/ui/Input.astro";
import Checkbox from "@/components/ui/Checkbox.astro";
import Button from "@/components/ui/Button.astro";
import Modal from "@/components/ui/Modal.astro";
import { supabase } from "@/lib/supabase";
import type { ContractTemplate, QuestionnaireTemplate } from "@/lib/types";

const accessToken = Astro.cookies.get("sb-access-token");
const refreshToken = Astro.cookies.get("sb-refresh-token");

if (!accessToken || !refreshToken) {
  return Astro.redirect("/auth/signin");
}

const session = await supabase.auth.setSession({
  refresh_token: refreshToken.value,
  access_token: accessToken.value,
});

if (session.error || !session.data.user) {
  return Astro.redirect("/auth/signin");
}

const user = session.data.user;

import { TemplateService } from "@/services/TemplateService";

// Get templates using Service
const contracts = await TemplateService.getContractTemplates(user.id);
const questionnaires = await TemplateService.getQuestionnaireTemplates(user.id);

const hasTemplates =
  contracts &&
  contracts.length > 0 &&
  questionnaires &&
  questionnaires.length > 0;
---

<Layout title="Nueva Sala de Bienvenida">
  <Navigation currentPage="clients" />

  <main class="flex-1 ml-60 p-16 max-w-5xl">
    <PageHeader
      title="Nueva Sala de Bienvenida"
      subtitle="Crea el link mágico para tu cliente"
    />

    {
      !hasTemplates && (
        <div class="mb-12 p-6 bg-status-warning/10 border border-status-warning/20 rounded-lg">
          <p class="text-sm font-light text-status-warning mb-4">
            Necesitas al menos una plantilla de contrato y una de cuestionario
            para crear una sala de bienvenida.
          </p>
          <div class="flex gap-6">
            <a
              href="/dashboard/templates/contracts"
              class="text-xs font-medium text-status-warning hover:underline"
            >
              CREAR CONTRATO
            </a>
            <a
              href="/dashboard/templates/questionnaires"
              class="text-xs font-medium text-status-warning hover:underline"
            >
              CREAR CUESTIONARIO
            </a>
          </div>
        </div>
      )
    }

    <form id="clientForm" class="max-w-2xl flex flex-col gap-8">
      <Input
        label="Nombre del Cliente"
        type="text"
        id="client_name"
        name="client_name"
        placeholder="Juan Pérez"
        required
      />

      <Input
        label="Nombre del Caso (Interno)"
        type="text"
        id="case_name"
        name="case_name"
        placeholder="Divorcio Pérez"
        required
      />

      <div class="flex flex-col gap-1.5">
        <label
          for="contract_template_id"
          class="text-xs uppercase tracking-widest text-content-secondary font-light"
        >
          Plantilla de Contrato
        </label>
        <select
          id="contract_template_id"
          name="contract_template_id"
          class="w-full bg-surface-card border border-border rounded px-3 py-2.5 text-content-primary text-sm focus:outline-none focus:border-brand focus:ring-1 focus:ring-brand-light"
          required
        >
          <option value="">Selecciona un contrato</option>
          {
            contracts?.map((contract: ContractTemplate) => (
              <option value={contract.id}>{contract.name}</option>
            ))
          }
        </select>
      </div>

      <div class="flex flex-col gap-1.5">
        <label
          for="questionnaire_template_id"
          class="text-xs uppercase tracking-widest text-content-secondary font-light"
        >
          Plantilla de Cuestionario
        </label>
        <select
          id="questionnaire_template_id"
          name="questionnaire_template_id"
          class="w-full bg-surface-card border border-border rounded px-3 py-2.5 text-content-primary text-sm focus:outline-none focus:border-brand focus:ring-1 focus:ring-brand-light"
          required
        >
          <option value="">Selecciona un cuestionario</option>
          {
            questionnaires?.map((q: QuestionnaireTemplate) => (
              <option value={q.id}>{q.name}</option>
            ))
          }
        </select>
      </div>

      <div class="flex flex-col gap-4">
        <label
          class="text-xs uppercase tracking-widest text-content-secondary font-light"
        >
          Documentos a Solicitar
        </label>
        <div class="grid grid-cols-2 gap-4">
          <Checkbox
            id="doc_ine"
            name="documents"
            value="ine"
            label="INE / Identificación Oficial"
          />
          <Checkbox id="doc_rfc" name="documents" value="rfc" label="RFC" />
          <Checkbox
            id="doc_acta"
            name="documents"
            value="acta_matrimonio"
            label="Acta de Matrimonio"
          />
          <Checkbox
            id="doc_comprobante"
            name="documents"
            value="comprobante_domicilio"
            label="Comprobante de Domicilio"
          />
        </div>
      </div>

      <div class="pt-8">
        <Button type="submit" variant="primary" disabled={!hasTemplates}>
          GENERAR LINK MÁGICO
        </Button>
      </div>
    </form>

    <Modal id="linkModal" title="Sala de Bienvenida Creada">
      <div class="flex flex-col gap-6">
        <p class="text-sm font-light text-content-secondary">
          Comparte este link con tu cliente. El link es de un solo uso.
        </p>

        <div class="bg-surface-base border border-border rounded p-4 break-all">
          <code id="magicLink" class="text-sm font-mono text-content-primary"
          ></code>
        </div>

        <div class="flex justify-end gap-4">
          <Button href="/dashboard/clients" variant="secondary">
            VER CLIENTES
          </Button>
          <Button id="copyLinkBtn" variant="primary"> COPIAR LINK </Button>
        </div>
      </div>
    </Modal>
  </main>
</Layout>

<script>
  const form = document.getElementById("clientForm") as HTMLFormElement;
  const magicLinkEl = document.getElementById("magicLink");
  const copyBtn = document.getElementById("copyLinkBtn");

  const toggleModal = () => {
    window.dispatchEvent(new CustomEvent("toggle-modal-linkModal"));
  };

  form?.addEventListener("submit", async (e) => {
    e.preventDefault();

    const formData = new FormData(form);
    const documents = formData.getAll("documents");

    const data = {
      client_name: formData.get("client_name"),
      case_name: formData.get("case_name"),
      contract_template_id: formData.get("contract_template_id"),
      questionnaire_template_id: formData.get("questionnaire_template_id"),
      required_documents: documents,
    };

    try {
      const response = await fetch("/api/clients/create", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(data),
      });

      if (response.ok) {
        const result = await response.json();
        if (magicLinkEl) {
          magicLinkEl.textContent = result.magic_link;
        }
        toggleModal();
      } else {
        const error = await response.json();
        alert("Error: " + error.error);
      }
    } catch (error) {
      alert("Error al crear la sala de bienvenida");
    }
  });

  copyBtn?.addEventListener("click", () => {
    const link = magicLinkEl?.textContent || "";
    navigator.clipboard.writeText(link);
    copyBtn.textContent = "COPIADO";
    setTimeout(() => {
      copyBtn.textContent = "COPIAR LINK";
    }, 2000);
  });
</script>
