---
import Layout from "../../../layouts/Dashboard.astro";
import Navigation from "../../../components/Navigation.astro";
import { ClientService } from "../../../services/ClientService";

// Middleware already validates session and injects user into locals
const { user } = Astro.locals;

// If for some reason middleware didn't catch it (shouldn't happen with correct config)
if (!user) {
  return Astro.redirect("/auth/signin");
}

const clients = await ClientService.getClients(user.id);
---

<Layout title="Clientes">
  <Navigation currentPage="clients" />

  <main class="dashboard-main">
    <header class="page-header">
      <h1 class="page-title">Clientes</h1>
      <p class="page-subtitle">Gestión de expedientes y salas de bienvenida</p>
    </header>

    <div class="action-bar">
      <a href="/dashboard/clients/new" class="primary-action">
        Nueva Sala de Bienvenida
      </a>
    </div>

    {
      clients && clients.length > 0 ? (
        <table class="data-table">
          <thead>
            <tr>
              <th>Cliente</th>
              <th>Caso</th>
              <th>Estado</th>
              <th>Fecha</th>
              <th />
            </tr>
          </thead>
          <tbody>
            {clients.map((client) => (
              <tr>
                <td class="table-primary">{client.client_name}</td>
                <td>{client.case_name}</td>
                <td>
                  <span class={`status-badge ${client.status}`}>
                    {client.status === "pending" ? "Pendiente" : "Completado"}
                  </span>
                </td>
                <td class="table-date">
                  {new Date(client.created_at).toLocaleDateString("es-MX")}
                </td>
                <td>
                  <div class="table-actions">
                    {client.status === "pending" ? (
                      <button
                        class="action-link copy-link-btn"
                        data-token={client.magic_link_token}
                        type="button"
                      >
                        Copiar Link
                      </button>
                    ) : (
                      <a
                        href={`/dashboard/clients/${client.id}/expediente`}
                        class="action-link"
                      >
                        Ver Expediente
                      </a>
                    )}
                    <button
                      class="action-link delete delete-client-btn"
                      data-id={client.id}
                      data-name={client.client_name}
                      type="button"
                    >
                      Eliminar
                    </button>
                  </div>
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      ) : (
        <div class="empty-state">
          <h3 class="empty-title">No hay clientes aún</h3>
          <p class="empty-text">
            Crea tu primera sala de bienvenida para comenzar
          </p>
          <a href="/dashboard/clients/new" class="empty-action">
            Nueva Sala de Bienvenida
          </a>
        </div>
      )
    }

    <div id="notification" class="notification"></div>
  </main>
</Layout>

<style>
  /* Estilos específicos de clients.astro */
  .data-table {
    width: 100%;
    border-collapse: collapse;
  }

  .data-table thead {
    border-bottom: 1px solid rgba(255, 255, 255, 0.06);
  }

  .data-table th {
    padding: 1.5rem 0;
    text-align: left;
    font-size: 0.75rem;
    font-weight: 300;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.4);
  }

  .data-table tbody tr {
    border-bottom: 1px solid rgba(255, 255, 255, 0.03);
    transition: background 0.2s ease;
  }

  .data-table tbody tr:hover {
    background: rgba(255, 255, 255, 0.01);
  }

  .data-table td {
    padding: 2rem 0;
    font-size: 0.875rem;
    font-weight: 300;
    color: rgba(255, 255, 255, 0.6);
  }

  .table-primary {
    color: rgba(255, 255, 255, 0.9);
  }

  .table-date {
    color: rgba(255, 255, 255, 0.4);
    font-size: 0.8125rem;
  }

  .status-badge {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    font-size: 0.6875rem;
    font-weight: 300;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    border-radius: 2px;
  }

  .status-badge.pending {
    background: rgba(255, 255, 255, 0.05);
    color: rgba(255, 255, 255, 0.5);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .status-badge.completed {
    background: rgba(255, 255, 255, 0.08);
    color: rgba(255, 255, 255, 0.7);
    border: 1px solid rgba(255, 255, 255, 0.15);
  }

  .table-actions {
    display: flex;
    gap: 1.5rem;
    align-items: center;
  }
</style>

<script>
  // Script optimizado para View Transitions y Event Delegation
  function initPage() {
    const notification = document.getElementById("notification");
    const mainContainer = document.querySelector(".dashboard-main");

    function showNotification(message: string) {
      if (!notification) return;
      notification.textContent = message;
      notification.className = "notification show";
      setTimeout(() => {
        notification.classList.remove("show");
      }, 3000);
    }

    if (!mainContainer) return;

    // Usar un solo listener en el contenedor principal (Event Delegation)
    mainContainer.addEventListener("click", async (e) => {
      const target = e.target as HTMLElement;

      // Copy Link
      if (target.matches(".copy-link-btn")) {
        const token = target.dataset.token;
        if (!token) return;
        const link = `${window.location.origin}/portal/${token}`;
        try {
          await navigator.clipboard.writeText(link);
          showNotification("Link copiado al portapapeles");
        } catch (err) {
          console.error("Error copying link:", err);
          showNotification("Error al copiar link");
        }
      }

      // Delete Client
      if (target.matches(".delete-client-btn")) {
        const id = target.dataset.id;
        const name = target.dataset.name;

        if (
          !id ||
          !confirm(
            `¿Estás seguro de eliminar el expediente de ${name}? Esta acción no se puede deshacer.`,
          )
        ) {
          return;
        }

        try {
          const response = await fetch("/api/clients/delete", {
            method: "DELETE",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ id }),
          });

          if (response.ok) {
            showNotification("Cliente eliminado correctamente");
            // Recargar suavemente para actualizar la lista
            setTimeout(() => window.location.reload(), 1500);
          } else {
            showNotification("Error al eliminar cliente");
          }
        } catch (error) {
          console.error("Error deleting client:", error);
          showNotification("Error al eliminar cliente");
        }
      }
    });
  }

  // Inicializar en carga inicial
  initPage();

  // Re-inicializar en navegación de View Transitions
  document.addEventListener("astro:page-load", initPage);
</script>
