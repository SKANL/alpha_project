---
import Layout from "@/layouts/Dashboard.astro";
import Navigation from "@/components/Navigation.astro";
import { supabase } from "@/lib/supabase";

const session = await supabase.auth.setSession({
  refresh_token: Astro.cookies.get("sb-refresh-token")?.value || "",
  access_token: Astro.cookies.get("sb-access-token")?.value || "",
});

if (!session.data.user) return Astro.redirect("/signin");

const { data: questionnaires } = await supabase
  .from("questionnaire_templates")
  .select(`*, questions(*)`)
  .eq("user_id", session.data.user.id)
  .order("created_at", { ascending: false });
---

<Layout title="Plantillas de Cuestionarios">
  <div class="dashboard-container">
    <Navigation currentPage="questionnaires" />
    
    <main class="dashboard-main">
      <div class="page-header">
        <h1 class="page-title">Plantillas de Cuestionarios</h1>
        <p class="page-subtitle">Gestiona tus cuestionarios de hechos</p>
      </div>

      <div class="action-bar">
        <button id="openModalBtn" class="primary-action">
          Nuevo Cuestionario
        </button>
      </div>

      {(!questionnaires || questionnaires.length === 0) ? (
        <div class="empty-state">
          <h3 class="empty-title">No hay cuestionarios aún</h3>
          <p class="empty-text">Crea tu primer cuestionario</p>
        </div>
      ) : (
        <div class="questionnaires-grid">
          {questionnaires.map((q: any) => (
            <div class="questionnaire-item">
              <div class="questionnaire-content">
                <h3 class="questionnaire-name">{q.name}</h3>
                <p class="questionnaire-count">
                  {q.questions.length} {q.questions.length === 1 ? 'pregunta' : 'preguntas'}
                </p>
                <ul class="questions-preview">
                  {q.questions.slice(0, 3).map((question: any) => (
                    <li class="question-item">
                      {question.question_text}
                    </li>
                  ))}
                  {q.questions.length > 3 && (
                    <li class="question-more">
                      + {q.questions.length - 3} más
                    </li>
                  )}
                </ul>
              </div>
              <div class="questionnaire-actions">
                <button class="action-link delete delete-btn" data-id={q.id}>Eliminar</button>
              </div>
            </div>
          ))}
        </div>
      )}

      <div id="modal" class="modal">
        <div class="modal-content">
          <h2 class="modal-title">Nuevo Cuestionario</h2>
          <form id="questionnaireForm" class="modal-form">
            <div class="form-row">
              <label for="name" class="form-label">Nombre del Cuestionario</label>
              <input type="text" id="name" name="name" class="form-input" placeholder="Cuestionario General" required />
            </div>
            <div class="form-row">
              <label class="form-label">Preguntas</label>
              <div id="questionsContainer" class="questions-container">
                <input type="text" class="question-input" placeholder="Pregunta 1" required />
              </div>
              <button type="button" class="add-question-btn" id="addQuestionBtn">
                Agregar Pregunta
              </button>
            </div>
            <div class="modal-footer">
              <button type="button" class="modal-btn secondary" id="closeModalBtn">Cancelar</button>
              <button type="submit" class="modal-btn primary">Guardar</button>
            </div>
          </form>
        </div>
      </div>
    </main>
  </div>
</Layout>

<style>
  /* Estilos específicos de questionnaires.astro */
  .questionnaire-count {
    font-size: 0.75rem;
    font-weight: 300;
    color: rgba(255, 255, 255, 0.3);
    margin-bottom: 1.5rem;
  }

  .questions-preview {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .question-item {
    font-size: 0.75rem;
    font-weight: 300;
    color: rgba(255, 255, 255, 0.4);
    margin-bottom: 0.5rem;
    padding-left: 1rem;
    position: relative;
  }

  .question-item::before {
    content: '—';
    position: absolute;
    left: 0;
    color: rgba(255, 255, 255, 0.2);
  }

  .question-more {
    font-size: 0.6875rem;
    font-weight: 300;
    color: rgba(255, 255, 255, 0.25);
    margin-top: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .questions-container {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .question-input {
    width: 100%;
    padding: 1rem 0;
    background: transparent;
    border: none;
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
    color: rgba(255, 255, 255, 0.9);
    font-size: 0.875rem;
    font-weight: 300;
    transition: border-color 0.3s ease;
  }

  .question-input:focus {
    outline: none;
    border-bottom-color: rgba(255, 255, 255, 0.2);
  }

  .question-input::placeholder {
    color: rgba(255, 255, 255, 0.2);
  }

  .add-question-btn {
    padding: 0.75rem 1.5rem;
    background: transparent;
    border: 1px solid rgba(255, 255, 255, 0.08);
    color: rgba(255, 255, 255, 0.5);
    font-size: 0.6875rem;
    font-weight: 300;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    cursor: pointer;
    transition: all 0.3s ease;
    border-radius: 2px;
    align-self: flex-start;
  }

  .add-question-btn:hover {
    border-color: rgba(255, 255, 255, 0.2);
    color: rgba(255, 255, 255, 0.7);
  }
</style>

<script>
  const modal = document.getElementById('modal');
  const form = document.getElementById('questionnaireForm') as HTMLFormElement;
  const container = document.getElementById('questionsContainer');
  
  document.getElementById('openModalBtn')?.addEventListener('click', () => {
    modal?.classList.add('active');
  });

  document.getElementById('closeModalBtn')?.addEventListener('click', () => {
    modal?.classList.remove('active');
  });

  document.getElementById('addQuestionBtn')?.addEventListener('click', () => {
    const input = document.createElement('input');
    input.type = 'text';
    input.className = 'question-input';
    input.placeholder = `Pregunta ${container!.children.length + 1}`;
    input.required = true;
    container?.appendChild(input);
  });

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const name = (document.getElementById('name') as HTMLInputElement).value;
    const questions = Array.from(document.querySelectorAll('.question-input'))
      .map((input: any) => input.value)
      .filter(q => q.trim());
    
    const response = await fetch('/api/templates/questionnaires/create', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ name, questions }),
    });
    if (response.ok) window.location.reload();
  });

  document.querySelectorAll('.delete-btn').forEach(btn => {
    btn.addEventListener('click', async () => {
      if (!confirm('¿Eliminar cuestionario?')) return;
      const id = (btn as HTMLElement).dataset.id;
      const response = await fetch('/api/templates/questionnaires/delete', {
        method: 'DELETE',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ id }),
      });
      if (response.ok) window.location.reload();
    });
  });
</script>
