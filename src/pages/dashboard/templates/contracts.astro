---
import Layout from "@/layouts/Dashboard.astro";
import Navigation from "@/components/Navigation.astro";
import { TemplateService } from "@/services/TemplateService";

const { user } = Astro.locals;

if (!user) {
  return Astro.redirect("/auth/signin");
}

const contracts = await TemplateService.getContractTemplates(user.id);
---

<Layout title="Plantillas de Contratos">
  <Navigation currentPage="contracts" />

  <main class="dashboard-main">
    <header class="page-header">
      <h1 class="page-title">Contratos</h1>
      <p class="page-subtitle">Plantillas reutilizables de contratos</p>
    </header>

    <div class="action-bar">
      <button id="openModalBtn" class="primary-action">
        Nueva Plantilla
      </button>
    </div>

    {
      contracts && contracts.length > 0 ? (
        <div class="templates-grid">
          {contracts.map((contract: any) => (
            <div class="template-item">
              <div class="template-content">
                <h3 class="template-name">{contract.name}</h3>
                <p class="template-date">
                  {new Date(contract.created_at).toLocaleDateString("es-MX")}
                </p>
              </div>
              <div class="template-actions">
                <a href={contract.file_url} target="_blank" class="action-link">
                  Ver PDF
                </a>
                <button
                  class="action-link delete delete-btn"
                  data-id={contract.id}
                >
                  Eliminar
                </button>
              </div>
            </div>
          ))}
        </div>
      ) : (
        <div class="empty-state">
          <h3 class="empty-title">No hay plantillas aún</h3>
          <p class="empty-text">Sube tu primera plantilla de contrato</p>
        </div>
      )
    }

    <div id="modal" class="modal">
      <div class="modal-content">
        <h2 class="modal-title">Nueva Plantilla de Contrato</h2>
        <form id="contractForm" class="modal-form">
          <div class="form-row">
            <label for="name" class="form-label">Nombre</label>
            <input
              type="text"
              id="name"
              name="name"
              placeholder="Contrato de Servicios"
              required
              class="form-input"
            />
          </div>
          <div class="form-row">
            <label for="file" class="form-label">Archivo PDF</label>
            <input
              type="file"
              id="file"
              name="file"
              accept=".pdf"
              required
              class="form-input-file"
            />
          </div>
          <div class="modal-footer">
            <button type="button" class="modal-btn secondary" id="closeModalBtn"
              >Cancelar</button
            >
            <button type="submit" class="modal-btn primary">Guardar</button>
          </div>
        </form>
      </div>
    </div>
  </main>
</Layout>

<style>
  /* Estilos específicos de contracts.astro */
  .modal-content {
    max-width: 500px;
  }
</style>

<script>
  function initContracts() {
    const modal = document.getElementById("modal");
    const form = document.getElementById("contractForm") as HTMLFormElement;

    document.getElementById("openModalBtn")?.addEventListener("click", () => {
      modal?.classList.add("active");
    });

    document.getElementById("closeModalBtn")?.addEventListener("click", () => {
      modal?.classList.remove("active");
    });

    form?.addEventListener("submit", async (e) => {
      e.preventDefault();
      const formData = new FormData(form);
      try {
        const response = await fetch("/api/templates/contracts/create", {
          method: "POST",
          body: formData,
        });
        if (response.ok) {
          window.location.reload();
        } else {
          alert("Error al crear plantilla");
        }
      } catch (error) {
        console.error(error);
        alert("Error al crear plantilla");
      }
    });

    document.querySelectorAll(".delete-btn").forEach((btn) => {
      btn.addEventListener("click", async () => {
        if (!confirm("¿Eliminar plantilla?")) return;
        const id = (btn as HTMLElement).dataset.id;
        try {
          const response = await fetch("/api/templates/contracts/delete", {
            method: "DELETE",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ id }),
          });
          if (response.ok) window.location.reload();
        } catch (error) {
          console.error(error);
          alert("Error al eliminar plantilla");
        }
      });
    });
  }

  initContracts();
  document.addEventListener("astro:page-load", initContracts);
</script>
