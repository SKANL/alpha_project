---
import Layout from "../../../layouts/Layout.astro";
import Navigation from "../../../components/Navigation.astro";
import { supabase } from "../../../lib/supabase";

const session = await supabase.auth.setSession({
  refresh_token: Astro.cookies.get("sb-refresh-token")?.value || "",
  access_token: Astro.cookies.get("sb-access-token")?.value || "",
});

if (!session.data.user) return Astro.redirect("/signin");

const { data: contracts } = await supabase
  .from("contract_templates")
  .select("*")
  .eq("user_id", session.data.user.id)
  .order("created_at", { ascending: false });
---

<Layout title="Plantillas de Contratos">
  <div class="dashboard-container">
    <Navigation currentPage="contracts" />
    
    <main class="dashboard-main">
      <header class="page-header">
        <h1 class="page-title">Contratos</h1>
        <p class="page-subtitle">Plantillas reutilizables de contratos</p>
      </header>

      <div class="action-bar">
        <button id="openModalBtn" class="primary-action">
          Nueva Plantilla
        </button>
      </div>

      {contracts && contracts.length > 0 ? (
        <div class="templates-grid">
          {contracts.map((contract) => (
            <div class="template-item">
              <div class="template-content">
                <h3 class="template-name">{contract.name}</h3>
                <p class="template-date">{new Date(contract.created_at).toLocaleDateString('es-MX')}</p>
              </div>
              <div class="template-actions">
                <a href={contract.file_url} target="_blank" class="action-link">Ver PDF</a>
                <button class="action-link delete delete-btn" data-id={contract.id}>Eliminar</button>
              </div>
            </div>
          ))}
        </div>
      ) : (
        <div class="empty-state">
          <h3 class="empty-title">No hay plantillas aún</h3>
          <p class="empty-text">Sube tu primera plantilla de contrato</p>
        </div>
      )}

      <div id="modal" class="modal">
        <div class="modal-content">
          <h2 class="modal-title">Nueva Plantilla de Contrato</h2>
          <form id="contractForm" class="modal-form">
            <div class="form-row">
              <label for="name" class="form-label">Nombre</label>
              <input type="text" id="name" name="name" placeholder="Contrato de Servicios" required class="form-input" />
            </div>
            <div class="form-row">
              <label for="file" class="form-label">Archivo PDF</label>
              <input type="file" id="file" name="file" accept=".pdf" required class="form-input-file" />
            </div>
            <div class="modal-footer">
              <button type="button" class="modal-btn secondary" id="closeModalBtn">Cancelar</button>
              <button type="submit" class="modal-btn primary">Guardar</button>
            </div>
          </form>
        </div>
      </div>
    </main>
  </div>
</Layout>

<style>
  .dashboard-container {
    display: flex;
    min-height: 100vh;
    background: #0a0a0a;
  }

  .dashboard-main {
    flex: 1;
    margin-left: 240px;
    padding: 4rem 6rem;
  }

  .page-header {
    margin-bottom: 3rem;
  }

  .page-title {
    font-size: 2rem;
    font-weight: 300;
    letter-spacing: 0.02em;
    color: rgba(255, 255, 255, 0.95);
    margin-bottom: 0.5rem;
  }

  .page-subtitle {
    font-size: 0.875rem;
    font-weight: 300;
    letter-spacing: 0.05em;
    color: rgba(255, 255, 255, 0.4);
  }

  .action-bar {
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.04);
  }

  .primary-action {
    padding: 1rem 2rem;
    background: transparent;
    border: 1px solid rgba(255, 255, 255, 0.15);
    color: rgba(255, 255, 255, 0.9);
    font-size: 0.75rem;
    font-weight: 300;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border-radius: 2px;
  }

  .primary-action:hover {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(255, 255, 255, 0.3);
  }

  .templates-grid {
    display: grid;
    gap: 1px;
    background: rgba(255, 255, 255, 0.04);
    border: 1px solid rgba(255, 255, 255, 0.04);
  }

  .template-item {
    background: #0a0a0a;
    padding: 2rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    transition: background 0.2s ease;
  }

  .template-item:hover {
    background: rgba(255, 255, 255, 0.01);
  }

  .template-content {
    flex: 1;
  }

  .template-name {
    font-size: 0.875rem;
    font-weight: 300;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 0.25rem;
  }

  .template-date {
    font-size: 0.75rem;
    font-weight: 300;
    color: rgba(255, 255, 255, 0.3);
  }

  .template-actions {
    display: flex;
    gap: 2rem;
  }

  .action-link {
    font-size: 0.8125rem;
    font-weight: 300;
    color: rgba(255, 255, 255, 0.5);
    text-decoration: none;
    background: transparent;
    border: none;
    cursor: pointer;
    transition: color 0.3s ease;
    padding: 0;
  }

  .action-link:hover {
    color: rgba(255, 255, 255, 0.9);
  }

  .action-link.delete:hover {
    color: rgba(239, 68, 68, 0.8);
  }

  .empty-state {
    padding: 6rem 2rem;
    text-align: center;
  }

  .empty-title {
    font-size: 1.5rem;
    font-weight: 300;
    color: rgba(255, 255, 255, 0.6);
    margin-bottom: 1rem;
  }

  .empty-text {
    font-size: 0.875rem;
    font-weight: 300;
    color: rgba(255, 255, 255, 0.3);
  }

  .modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.85);
    z-index: 1000;
    align-items: center;
    justify-content: center;
  }

  .modal.active {
    display: flex;
  }

  .modal-content {
    background: #0a0a0a;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 2px;
    padding: 3rem;
    max-width: 500px;
    width: 90%;
  }

  .modal-title {
    font-size: 1.25rem;
    font-weight: 300;
    letter-spacing: 0.02em;
    color: rgba(255, 255, 255, 0.95);
    margin-bottom: 2rem;
  }

  .modal-form {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .form-row {
    display: flex;
    flex-direction: column;
  }

  .form-label {
    font-size: 0.75rem;
    font-weight: 300;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.5);
    margin-bottom: 1rem;
  }

  .form-input,
  .form-input-file {
    width: 100%;
    padding: 1rem 0;
    background: transparent;
    border: none;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    color: rgba(255, 255, 255, 0.9);
    font-size: 1rem;
    font-weight: 300;
    transition: border-color 0.3s ease;
  }

  .form-input:focus,
  .form-input-file:focus {
    outline: none;
    border-bottom-color: rgba(255, 255, 255, 0.3);
  }

  .form-input::placeholder {
    color: rgba(255, 255, 255, 0.25);
  }

  .modal-footer {
    display: flex;
    gap: 1rem;
    justify-content: flex-end;
    margin-top: 1rem;
  }

  .modal-btn {
    padding: 0.75rem 2rem;
    font-size: 0.75rem;
    font-weight: 300;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    cursor: pointer;
    transition: all 0.3s ease;
    border-radius: 2px;
  }

  .modal-btn.primary {
    background: transparent;
    border: 1px solid rgba(255, 255, 255, 0.2);
    color: rgba(255, 255, 255, 0.9);
  }

  .modal-btn.primary:hover {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(255, 255, 255, 0.4);
  }

  .modal-btn.secondary {
    background: transparent;
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: rgba(255, 255, 255, 0.5);
  }

  .modal-btn.secondary:hover {
    border-color: rgba(255, 255, 255, 0.2);
    color: rgba(255, 255, 255, 0.7);
  }
</style>

<script>
  const modal = document.getElementById('modal');
  const form = document.getElementById('contractForm') as HTMLFormElement;
  
  document.getElementById('openModalBtn')?.addEventListener('click', () => {
    modal?.classList.add('active');
  });

  document.getElementById('closeModalBtn')?.addEventListener('click', () => {
    modal?.classList.remove('active');
  });

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const formData = new FormData(form);
    const response = await fetch('/api/templates/contracts/create', {
      method: 'POST',
      body: formData,
    });
    if (response.ok) {
      window.location.reload();
    } else {
      alert('Error al crear plantilla');
    }
  });

  document.querySelectorAll('.delete-btn').forEach(btn => {
    btn.addEventListener('click', async () => {
      if (!confirm('¿Eliminar plantilla?')) return;
      const id = (btn as HTMLElement).dataset.id;
      const response = await fetch('/api/templates/contracts/delete', {
        method: 'DELETE',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ id }),
      });
      if (response.ok) window.location.reload();
    });
  });
</script>
