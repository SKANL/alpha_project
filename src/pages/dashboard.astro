    margin-bottom: 0.5rem;
    line-height: 1;
  }

  .stat-label {
    font-size: 0.75rem;
    font-weight: 300;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.4);
  }

  .page-header {
    margin-bottom: 4rem;
  }

  .templates-section {
    display: flex;
    gap: 4rem;
    margin-bottom: 4rem;
    padding: 2rem 0;
    border-top: 1px solid rgba(255, 255, 255, 0.04);
    border-bottom: 1px solid rgba(255, 255, 255, 0.04);
  }

  .template-stat {
    display: flex;
    align-items: baseline;
    gap: 1rem;
  }

  .template-count {
    font-size: 2rem;
    font-weight: 200;
    color: rgba(255, 255, 255, 0.9);
  }

  .template-text {
    font-size: 0.875rem;
    font-weight: 300;
    color: rgba(255, 255, 255, 0.5);
  }

  .actions-section {
    margin-top: 4rem;
  }

  .section-title {
    font-size: 0.875rem;
    font-weight: 300;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.4);
    margin-bottom: 2rem;
  }

  .actions-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }

  .action-card {
    background: transparent;
    border: 1px solid rgba(255, 255, 255, 0.08);
