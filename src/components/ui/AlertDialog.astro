---
interface Props {
    id?: string;
}

const { id = "alert-dialog" } = Astro.props;
---

<ui-alert-dialog
    id={id}
    class="fixed inset-0 z-[60] hidden items-center justify-center p-4 transition-all duration-300"
    role="alertdialog"
    aria-modal="true"
>
    <div
        class="alert-content relative w-full max-w-md transform overflow-hidden rounded-sm bg-surface-card border border-border shadow-2xl p-8 transition-all duration-500"
    >
        <!-- Icon -->
        <div
            class="alert-icon-container relative flex items-center justify-center w-12 h-12 rounded-full bg-surface-highlight mb-6 mx-auto"
        >
            <!-- Success -->
            <svg
                class="alert-icon alert-icon-success hidden w-5 h-5 text-status-success"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="1.5"
                    d="M5 13l4 4L19 7"></path>
            </svg>
            <!-- Error -->
            <svg
                class="alert-icon alert-icon-error hidden w-5 h-5 text-status-error"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="1.5"
                    d="M6 18L18 6M6 6l12 12"></path>
            </svg>
            <!-- Warning -->
            <svg
                class="alert-icon alert-icon-warning hidden w-5 h-5 text-status-warning"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="1.5"
                    d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
                ></path>
            </svg>
            <!-- Info -->
            <svg
                class="alert-icon alert-icon-info hidden w-5 h-5 text-status-info"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="1.5"
                    d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                ></path>
            </svg>
        </div>

        <!-- Message -->
        <p
            class="alert-message relative text-sm text-center text-content-primary font-light leading-relaxed mb-8"
        >
            Mensaje de alerta
        </p>

        <!-- Action -->
        <div class="relative flex justify-center">
            <button
                class="alert-close px-8 py-2 rounded-sm text-sm font-medium tracking-wide text-surface-base bg-brand hover:bg-brand-hover transition-colors duration-500 shadow-sm"
                type="button"
            >
                Aceptar
            </button>
        </div>
    </div>
</ui-alert-dialog>

<script>
    import "@/components/interactive/UiAlertDialog";
</script>
