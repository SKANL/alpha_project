---
interface Props {
    class?: string;
    hover?: boolean;
}

const { class: className, hover = false } = Astro.props;
---

<div
    class:list={[
        "bg-surface-card border border-border rounded-sm p-6",
        hover &&
            "transition-all duration-500 hover:border-border-strong hover:shadow-lg hover:shadow-black/20",
        className,
    ]}
>
    <slot />
</div>
