---
interface Props {
    class?: string;
    hover?: boolean;
}

const { class: className, hover = false } = Astro.props;
---

<div
    class:list={[
        "bg-surface-card border border-border rounded-lg p-6",
        hover &&
            "transition-all duration-300 hover:border-border-strong hover:-translate-y-0.5 hover:shadow-lg hover:shadow-black/50",
        className,
    ]}
>
    <slot />
</div>
