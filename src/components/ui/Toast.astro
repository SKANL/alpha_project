---
interface Props {
    id?: string;
}

const { id = "toast-container" } = Astro.props;
---

<ui-toast-container
    id={id}
    class="fixed top-4 right-4 z-[70] flex flex-col gap-3 pointer-events-none"
    role="region"
    aria-label="Notificaciones"
>
    <!-- Toasts will be dynamically added here -->
</ui-toast-container>

<script>
    import "@/components/interactive/UiToast";
</script>
