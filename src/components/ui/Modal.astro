---
interface Props {
    id: string;
    title: string;
}

const { id, title } = Astro.props;
---

<ui-modal
    id={id}
    class="modal-backdrop fixed inset-0 z-50 hidden items-center justify-center p-4 transition-all duration-300"
    role="dialog"
    aria-modal="true"
    aria-labelledby={`${id}-title`}
>
    <div
        class="modal-content relative w-full max-w-lg transform overflow-hidden rounded-sm bg-surface-card border border-border shadow-2xl p-8 transition-all duration-500"
    >
        <h2
            id={`${id}-title`}
            class="relative text-2xl font-serif tracking-wide text-content-primary mb-6 flex items-center gap-3"
        >
            {title}
        </h2>

        <div class="relative">
            <slot />
        </div>
    </div>
</ui-modal>

<script>
    import "@/components/interactive/UiModal";
</script>
