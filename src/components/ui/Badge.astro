---
interface Props {
    variant?: "default" | "success" | "warning" | "error" | "info";
    class?: string;
}

const { variant = "default", class: className } = Astro.props;

const variants = {
    default: "bg-surface-highlight text-content-secondary border-border-weak",
    success:
        "bg-status-success/10 text-status-success border-status-success/20",
    warning:
        "bg-status-warning/10 text-status-warning border-status-warning/20",
    error: "bg-status-error/10 text-status-error border-status-error/20",
    info: "bg-status-info/10 text-status-info border-status-info/20",
};
---

<span
    class:list={[
        "inline-flex items-center px-2.5 py-0.5 rounded-sm text-[10px] font-medium uppercase tracking-widest border",
        variants[variant],
        className,
    ]}
>
    <slot />
</span>
