---
interface Props {
  title: string;
}

const { title } = Astro.props;
import "@/styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Lawyer</title>
    <!-- Google Fonts: Inter & Playfair Display -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Playfair+Display:ital,wght@0,400;0,600;1,400&display=swap"
      rel="stylesheet"
    />
  </head>
  <body
    class="bg-surface-base text-content-primary font-sans antialiased min-h-screen selection:bg-brand-light selection:text-brand-text"
  >
    <slot />

    <!-- Global UI Components -->
    <ui-toast-container
      id="toast-container"
      class="fixed top-4 right-4 z-[70] flex flex-col gap-3 pointer-events-none"
      role="region"
      aria-label="Notificaciones"></ui-toast-container>

    <ui-confirm-dialog
      id="confirm-dialog"
      class="fixed inset-0 z-[60] hidden items-center justify-center p-4 transition-all duration-500"
      role="alertdialog"
      aria-modal="true"
    >
      <div
        class="confirm-content relative w-full max-w-md transform overflow-hidden rounded-sm bg-surface-card border border-border shadow-2xl p-8 transition-all duration-500"
      >
        <div
          class="relative flex items-center justify-center w-12 h-12 rounded-full bg-surface-highlight mb-6 mx-auto"
        >
          <svg
            class="w-5 h-5 text-status-warning"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            ><path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="1.5"
              d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
            ></path></svg
          >
        </div>
        <h3
          class="confirm-title relative text-xl font-serif text-center text-content-primary mb-3"
        >
          Confirmar acción
        </h3>
        <p
          class="confirm-message relative text-sm text-center text-content-secondary font-light leading-relaxed mb-8"
        >
          ¿Estás seguro de realizar esta acción?
        </p>
        <div class="relative flex gap-4 justify-center">
          <button
            class="confirm-cancel px-6 py-2 rounded-sm text-sm font-medium tracking-wide text-content-secondary hover:text-content-primary transition-colors duration-300"
            type="button">Cancelar</button
          >
          <button
            class="confirm-accept px-6 py-2 rounded-sm text-sm font-medium tracking-wide text-surface-base bg-brand hover:bg-brand-hover transition-colors duration-500 shadow-sm"
            type="button">Confirmar</button
          >
        </div>
      </div>
    </ui-confirm-dialog>

    <ui-alert-dialog
      id="alert-dialog"
      class="fixed inset-0 z-[60] hidden items-center justify-center p-4 transition-all duration-500"
      role="alertdialog"
      aria-modal="true"
    >
      <div
        class="alert-content relative w-full max-w-md transform overflow-hidden rounded-sm bg-surface-card border border-border shadow-2xl p-8 transition-all duration-500"
      >
        <div
          class="alert-icon-container relative flex items-center justify-center w-12 h-12 rounded-full bg-surface-highlight mb-6 mx-auto"
        >
          <svg
            class="alert-icon alert-icon-success hidden w-5 h-5 text-status-success"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            ><path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="1.5"
              d="M5 13l4 4L19 7"></path></svg
          >
          <svg
            class="alert-icon alert-icon-error hidden w-5 h-5 text-status-error"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            ><path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="1.5"
              d="M6 18L18 6M6 6l12 12"></path></svg
          >
          <svg
            class="alert-icon alert-icon-warning hidden w-5 h-5 text-status-warning"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            ><path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="1.5"
              d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
            ></path></svg
          >
          <svg
            class="alert-icon alert-icon-info hidden w-5 h-5 text-status-info"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            ><path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="1.5"
              d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
            ></path></svg
          >
        </div>
        <p
          class="alert-message relative text-sm text-center text-content-primary font-light leading-relaxed mb-8"
        >
          Mensaje de alerta
        </p>
        <div class="relative flex justify-center">
          <button
            class="alert-close px-8 py-2 rounded-sm text-sm font-medium tracking-wide text-surface-base bg-brand hover:bg-brand-hover transition-colors duration-500 shadow-sm"
            type="button">Aceptar</button
          >
        </div>
      </div>
    </ui-alert-dialog>
  </body>
</html>

<script>
  // Initialize global UI components
  import "@/components/interactive/UiToast";
  import "@/components/interactive/UiConfirmDialog";
  import "@/components/interactive/UiAlertDialog";
</script>

