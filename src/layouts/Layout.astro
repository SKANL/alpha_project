  /* Minimal reset for scrollbars - Zen Style */
  ::-webkit-scrollbar {
    width: 6px;
    height: 6px;
  }
  ::-webkit-scrollbar-track {
    background: #0f0f0e; /* surface-base */
  }
  ::-webkit-scrollbar-thumb {
    background: #2c2c2a; /* surface-highlight */
    border-radius: 3px;
  }
  ::-webkit-scrollbar-thumb:hover {
    background: #444440; /* border-strong */
  }
</style>
